public class Node
{
  
  PVector pos;
  color c;
  int attribut;
  int moisture;
 
  Node()
  {  
    pos = new PVector(random(0, width), random(0, height) );   
    attribut = 3;
    moisture = 0;
  }
  
  void generate()
  {
   
    switch(attribut)
    {
      case 0:  c = color(#C2B280);  //Sand
      break;
      case 1:  c = color(#567D46); //Grass
      break; 
      case 2:   c = color(0, 5, 52); //Stone
      break;
      case 3:  c = color(60,random(50, 80), moisture); //Water 
      break;
      case 4: c = color(#EA2300); // Lava
      break;
      default: c = color(0,100,100); //Default Pink
      
    }
    
  }
  
  

  
}
