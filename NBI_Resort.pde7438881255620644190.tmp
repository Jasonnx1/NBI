void setup()
{
  size(640, 480);
  currentTime = millis();
  previousTime = millis();
  
  mMap = new MoistureMap();  
  hMap = new HeightMap();
 
  mMap.load();
  hMap.load();
  
  
}


void draw()
{
  currentTime = millis();
  deltaTime = currentTime - previousTime;
 
  update(deltaTime);
  display();
  
  previousTime = currentTime;
}

