int previousTime;
int deltaTime;
int currentTime;

Voronoi voronoi;

void setup()
{ 
  size(800, 600);
  currentTime = millis();
  previousTime = millis();
  
 
   
    // smooth edges
    smooth();  
    // limit the number of frames per second
    frameRate(60);
    colorMode(HSB);
  
  
    voronoi = new Voronoi();
    voronoi.generateMap();
    voronoi.display(); 
  
}


void draw()
{
  currentTime = millis();
  deltaTime = currentTime - previousTime;
 
  update(deltaTime);
  display();
  
  previousTime = currentTime;
}

